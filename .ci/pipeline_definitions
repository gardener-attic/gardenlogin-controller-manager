gardenlogin-controller-manager:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          gardenlogin:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/gardenlogin-controller-manager'
          gardenlogin-container-deployer:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/gardenlogin-container-deployer'
            dir: .landscaper/container
    steps:
      check:
        image: 'golang:1.16.5'
      test:
        image: 'golang:1.16.5'
  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
        component_descriptor: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'C017DNNNENQ' # garden-dashboard channel
              slack_cfg_name: 'scp_workspace'
        component_descriptor: ~
        publish:
          dockerimages:
            gardenlogin:
              tag_as_latest: true
